<div class="container">
  <div class="row">
    <div class="col-md-12">
      <section>
        {{#if model.word.lastErrored.hasStarted}}
          <div data-test-id="error-notification" class="alert alert-danger">
            {{model.word.lastErrored.error}}          </div>
        {{else}}
          {{#if model.word.isRunning}}
            Loading....
            <div class="loader"></div>


          {{else}}
            Done!

              {{hangman-level level=level chosenLevel=(route-action "chosenLevel")}}
              {{hangman-game word=model.word.lastSuccessful.value.title}}
            {{/if}}


          {{/if}}

        {{outlet}}
      </section>
    </div>
  </div>
</div><!-- /.container -->
